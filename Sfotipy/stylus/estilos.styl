@import "normalize.styl"
@import "fonts.styl"
gris_oscuro = #333333
gris_claro = #818181
rojo = #BD255B

body
	font-family 'Varela Round', sans-serif
	font-size 16px
	
a 
	text-decoration none

figure
	margin 0

img
	vertical-align top
//buttons
.button-menu
	color gris_oscuro
	left 5%
	margin-top -10px
	position absolute
	top 50%
	
//oocdd classes
.container
	padding 1.4rem
	font-size 0
	text-align center

.border-bottom
	border-bottom 1px solid gris_claro
	
.menu
	display none
	
.relative
	position relative

.header
	height 3.5em
	//a
	//	display none
	.title
		font-size 1.1em
		text-align center
		margin 0
		line-height 3.5em

.song
	display inline-block
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	text-align left
	width 8rem
	
	&:nth-child(even)
		margin-right 0
	
	p
		margin 0.5em 0
	
.progress
	margin 1em 0
	position relative
	
	.min
	.max
		font-size 0.8em
		position absolute
		top -5px
	.min
		left 0
	.max
		right 0
		
	.total
		background gris_claro
		border-radius 5px
		height 5px
		margin 0 auto
		width 75%
		
	.state
		background rojo
		border-radius 5px
		height 5px
		width 30%
		position relative
	.circle
		background gris_oscuro
		border-radius 50%
		height 10px
		position absolute
		right 0
		top -2px
		width 10px
.name
	color gris_oscuro
	
.author
	color gris_claro
	
.action
	color white
	font-size 1.2em
	margin-right 0.5em
	
	&:last-child
		margin-right 0
	
	&.gray
		color gris_oscuro

.actions
	background rgba(0,0,0,0.3)
	bottom 0
	left 0
	position absolute
	right 0

.center-block
	margin 0 auto
	
.center-text
	text-align center
	
.padding
	padding 1em
	
.padding-tb
	padding 1em 0

.right-text
	text-align right 

.playing
	&.small
		width 20em